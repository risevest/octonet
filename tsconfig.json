{
  "compilerOptions": {
    "target": "ES2017",
    "declaration": true,
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "types/**/*.d.ts"],
    "types": ["reflect-metadata", "mocha"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["src/**/*.spec.ts"],
  "include": ["types/**/*.d.ts", "src/**/*"]
}
